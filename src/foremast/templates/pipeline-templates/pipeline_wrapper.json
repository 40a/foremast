{
  "name": "{{ data.app.appname }} [{{ data.app.region }}]",
  "application": "{{ data.app.appname }}",
  "triggers": [
    {% include "pipeline-templates/trigger-jenkins.json.j2" %}
  ],
  "limitConcurrent": false,
  "parallel": true,
  "notifications": [
    {
      "level": "pipeline",
      "when": [
        "pipeline.failed"
      ],
      "type": "slack",
      "address": "{{ data.app.slack }}"
    },
    {
      "level": "pipeline",
      "when": [
        "pipeline.failed"
      ],
      "type": "email",
      "address": "{{ data.app.email }}"
    }
  ],
  "stages": [
    {% include "pipeline-templates/stage-bake.json.j2" %},
    {% include "pipeline-templates/stage-tagger.json.j2" %}
  ]
}
